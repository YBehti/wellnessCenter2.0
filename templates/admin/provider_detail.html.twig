{% extends 'base.html.twig' %}
{% block form %}
{% endblock %}
{% block main %}

    <div class="main">
        <div class="outer-admin">
            <div class="wrapper-admin">



                <div class="content-admin">
                    <div class="content-admin-wrapper">


                        <div class="content-admin-footer">
                            <div class="container-fluid">
                                <div class="content-admin-footer-inner">
                                    <div class="background-white p20 mb50">
                                        <table class="table table-hover mb0">
                                            <caption>Provider detail</caption>

                                            <thead>
                                            <tr>
                                                <td>Name</td>
                                                <td>E-mail</td>
                                                <td>VAT Number</td>
                                                <td>Website</td>
                                                <td>Phone Number</td>
                                            </tr>
                                            </thead>

                                            <tbody>

                                            <tr>

                                                <td>{{ provider.name }}</td>
                                                <td>{{ provider.email }}</td>
                                                <td>{{ provider.vATNumber }}</td>
                                                <td>{{ provider.website }}</td>
                                                <td>{{ provider.phoneNumber }}</td>
                                            </tr>


                                            </tbody>
                                        </table>
                                        <table class="table table-hover mb0">
                                            <caption>Provider services</caption>

                                            <tbody>
                                            <tr>
                                                {% for service in provider.services %}
                                                    <td>{{ service.name }}</td>
                                                {% endfor %}
                                            </tr>
                                            </tbody>


                                        </table>

                                        <table class="table table-hover mb0">
                                            <caption>Provider internship</caption>

                                            <thead>
                                            <tr>
                                                {% for internship in provider.internship %}
                                                    <td>{{ internship.name }}</td>
                                                {% endfor %}
                                            </tr>
                                            </thead>
                                            <tbody>

                                            <tr>
                                                {% for internship in provider.internship %}
                                                    <td>start : {{ internship.start | date('d-m-Y') }}</td>
                                                {% endfor %}
                                            </tr>
                                            <tr>
                                                {% for internship in provider.internship %}
                                                    <td>end : {{ internship.end | date('d-m-Y') }}</td>
                                                {% endfor %}
                                            </tr>

                                            </tbody>


                                        </table>

                                        <a class="btn btn-primary mt50" href="{{ path('admin') }}">Back</a>

                                    </div>
                                </div><!-- /.content-admin-footer-inner -->
                            </div><!-- /.container-fluid -->
                        </div><!-- /.content-admin-footer  -->
                    </div><!-- /.content-admin-wrapper -->
                </div><!-- /.content-admin -->
            </div><!-- /.wrapper-admin -->
        </div><!-- /.outer-admin -->
    </div>

{% endblock %}