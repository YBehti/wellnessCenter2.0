                                                    <h3>Providers<i class="fa fa-chevron-right"></i></h3>

                                                    <div class="users">
                                                        <table class="table">
                                                            <tbody>
                                                            {% for provider in providers %}
                                                            <tr>
                                                                <td><a class="user" href="#"><img src="assets/img/tmp/agent-1.jpg" alt=""></a></td>
                                                                <td class="hidden-xs visible-sm visible-md visible-lg">
                                                                    <h2><a href="#">{{ provider.name }}</a></h2>
                                                                    <h3>Registered: {{ provider.registrationDate |date('d-m-Y') }}</h3>
                                                                    <h3>Number of services : {{ provider.services | length }}</h3>
                                                                </td>
                                                                <td class="right">

                                                                    <a href="{{ path("provider_admin_detail", {slug:provider.slug}) }}" class="btn btn-xs btn-primary">Detail</a>


                                                                </td>
                                                            </tr>
                                                            {% endfor %}


                                                            </tbody>
                                                        </table>
                                                        <a class="btn btn-primary" href="{{ path('admin_services') }}">See Services</a>
