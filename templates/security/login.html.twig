{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block form %} {% endblock %}

{% block main %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">



                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="page-title">
                                <h1>Login</h1>
                            </div><!-- /.page-title -->

                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey }}
                                </div>
                            {% endif %}

                            <form method="post" action="{{ path('login') }}">
                                <div class="form-group">
                                    <label for="login-form-email">E-mail</label>
                                    <input type="email" class="form-control" name="_username" id="login-form-email" value="{{ last_username }}" required>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label for="login-form-password">Password</label>
                                    <input type="password" class="form-control" name="_password" id="login-form-password" required>
                                </div><!-- /.form-group -->

                                <button type="submit" class="btn btn-primary pull-right">Login</button>
                            </form>
                        </div><!-- /.col-sm-4 -->
                    </div><!-- /.row -->

                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div>

{% endblock %}