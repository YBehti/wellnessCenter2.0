{%extends "base.html.twig"%}

{% block title %}Registration{% endblock %}

{% block form %} {% endblock %}

{% block main %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">



                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="page-title">
                                <h1>Register</h1>
                            </div><!-- /.page-title -->

                            <form method="post" action="{{ path('registered') }}">

                                <div class="form-group">
                                    <label for="login-form-first-name">User Type</label>
                                    <select class="form-control bs-select-hidden"  name="user_type" title="Select User Type"><option class="bs-title-option" value=""> Select User Type </option>

                                        <option value="surfer">Surfer</option>
                                        <option value="provider">Provider</option>

                                    </select>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label for="login-form-email">E-mail</label>
                                    <input type="email" class="form-control" name="email" id="login-form-email">
                                </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label for="login-form-password">Password</label>
                                    <input type="password" class="form-control" name="password" id="login-form-password">
                                </div><!-- /.form-group -->



                                <button type="submit" class="btn btn-primary pull-right">Register</button>
                            </form>
                        </div><!-- /.col-sm-4 -->
                    </div><!-- /.row -->

                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div>
{% endblock %}